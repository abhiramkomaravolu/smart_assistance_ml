CREATE TABLE IF NOT EXISTS users (id INTEGER PRIMARY KEY AUTOINCREMENT, name TEXT NOT NULL, email TEXT NOT NULL, password TEXT NOT NULL, age INTEGER NOT NULL, gender TEXT NOT NULL, cholesterol INTEGER NOT NULL, chest_pain_type TEXT NOT NULL);
CREATE TABLE sensordata (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    heartsensor TEXT,
    bp TEXT,
    chol TEXT,
    timestamp DATETIME DEFAULT CURRENT_TIMESTAMP,
    FOREIGN KEY (user_id) REFERENCES users(id)
);
CREATE TABLE IF NOT EXISTS alerts (id INTEGER PRIMARY KEY AUTOINCREMENT, time TEXT, message TEXT, triggered INTEGER DEFAULT 0);
